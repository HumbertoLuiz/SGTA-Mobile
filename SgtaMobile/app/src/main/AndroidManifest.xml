<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.edu.ifpr.sgtamobile">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SgtaMobile"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.EditarCurso"
            android:exported="false" />
        <activity
            android:name=".ui.EditarAluno"
            android:exported="false" />
        <activity
            android:name=".ui.EditarTarefa"
            android:exported="false" />
        <activity
            android:name=".ui.EditarServidor"
            android:exported="false" />
        <activity android:name=".fragments.EditarServidor"
            tools:ignore="Instantiatable">
        </activity>
        <activity
            android:name=".ui.EditarUsuario"
            android:exported="false" />
        <activity
            android:name=".ui.UsuarioActivity"
            android:exported="false" />
        <activity
            android:name=".ui.CursoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.TarefaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ServidorActivity"
            android:exported="false" />
        <activity
            android:name=".ui.AlunoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>