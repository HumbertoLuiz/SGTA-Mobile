<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/beje"
    tools:context=".ui.LoginActivity">

    <include
        android:id="@+id/tlb_main_page"
        layout="@layout/app_bar_layout">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_cabecalho"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="SGTA"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="50sp"
                android:background="@color/laranja"/>

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_cabecalho"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Entrar na  sua Conta" />

            <EditText
                android:id="@+id/edt_login_email"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_login"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/borda"
                android:drawableStart="@drawable/ic_email_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Entre seu Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_login_password"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_login_email"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/borda"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_login_connect"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_login_password"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/btns"
                android:text="Login"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_rec_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_login_password"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="16dp"
                android:onClick="recuperaSenha"
                android:text="Esqueceu sua senha ?"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/btn_cadastrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_login_password"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="16dp"
                android:onClick="novoCadastro"
                android:text="Cadastrar"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal" />




        </RelativeLayout>

    </ScrollView>
</RelativeLayout>